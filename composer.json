{
    "name": "andri-sudarmawijaya/copyfile10",
    "description": "copy file",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Andri Sudarmawijaya",
            "email": "andri.sudarmawijaya@gmail.com"
        }
    ],
    "require": {},
    "require-dev": {
        "composer/composer": "1.0.*@dev",
        "symfony/filesystem": "~2.7",
        "symfony/finder": "~2.7",
        "phpunit/phpunit": "5.7.27",
        "mikey179/vfsstream": "~1",
        "php-mock/php-mock-phpunit": "~1"
    },
    "autoload": {
        "psr-4": {
            "AndriSudarmawijaya\\Copyfile10\\": "src/"
        }
    },
    "scripts" : {
        "post-install-cmd": [
            "AndriSudarmawijaya\\Copyfile10\\Installer::postInstall"
        ],
        "post-update-cmd": [
            "php -r \"copy('config/local-example.php', './application/config/local.php');\"",
            "AndriSudarmawijaya\\Copyfile10\\Installer::postUpdate"
        ],
        "post-autoload-dump": [
            "AndriSudarmawijaya\\Copyfile10\\Installer::postAutoloadDump"
        ]
    },
    "minimum-stability": "dev",
    "extra": {
        "compile": [{"php-method": "\\AndriSudarmawijaya\\Copyfile10\\Installer::postUpdate"}],
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
